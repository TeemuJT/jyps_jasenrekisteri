<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="JYPS\User\User" table="User">
    <unique-constraints>
      <unique-constraint name="UNIQ_2DA17977E7927C74" columns="email"/>
      <unique-constraint name="UNIQ_2DA17977F85E0677" columns="username"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="username" type="string" column="username" length="25" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="salt" type="string" column="salt" length="100" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default">NULL</option>
      </options>
    </field>
    <field name="password" type="string" column="password" length="250" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="email" type="string" column="email" length="60" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="isActive" type="boolean" column="is_active" nullable="false"/>
    <field name="realname" type="string" column="realname" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-many field="role" target-entity="Role" inversed-by="user" fetch="LAZY">
      <join-table name="user_role">
        <join-columns>
          <join-column name="user_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="role_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
